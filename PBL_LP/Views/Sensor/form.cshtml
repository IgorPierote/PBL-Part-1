@model SensorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2><span class="moving">Cadastro de Sensor</span></h2>
<form action="Save" method="post">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
    <<label for="Id" class="control-label">Id</label>
    @if (ViewBag.Operacao == "I")
    {
        <input type="number" name="id" value="@Model.Id" class="form-control" />
    }
    else
    {
        <input type="number" name="id" value="@Model.Id" class="form-control disabled" readonly />
    }
    <span asp-validation-for="Id" class="text-danger"></span>
    <br />

    <div class="caixa_texto">
        <label for="Nome" class="control-label">Nome do Sensor</label>
        <input type="text" name="Nome" value="@Model.Nome" />
        <span asp-validation-for="Nome" class="text-danger"></span>
        <br />
    </div>

    <label for="Tipo" class="control-label">Tipo</label>
    <select asp-for="Tipo" asp-items="ViewBag.Tipos" class="form-control"> </select>
    <span asp-validation-for="Tipo" class="text-danger"></span>
    <br />

    <div class="caixa_texto">
        <label for="ValorDoAluguel" class="control-label">Valor do Aluguel</label>
        <input type="text" name="ValorDoAluguel" value="@Model.ValorDoAluguel" />
        <span asp-validation-for="ValorDoAluguel" class="text-danger"></span>
        <br />
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
    </br>
</form>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

